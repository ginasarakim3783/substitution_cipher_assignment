# substitution_cipher_assignment
alphabet = " !\"#$%&'()*+,-./0123456789:;<=>?@ABCDEFGHIJKLMNOPQRSTUVWXYZ[\\]^_`abcdefghijklmnopqrstuvwxyz{|}~"
key = "iDj+{=gMVoh(\"^`&}N?)yS_Qa8:].Z#5t1*vzxbAFnJfG[-0IKH2qk76w|%~EUP/;X!,\B'>$RsTCWud\L9Oc3<lYempr\@4"

def encrypt(message):
    result = ""

    for letter in message:
        loc = alphabet.find(letter)
        result += key[loc]

    return result 

def decrypt(message):
    result = ""

    for letter in message:
        loc = key.find(letter)
        result += alphabet[loc]

    return result 



unencrypted_message = "I love to get out of school. I hate this coding project even if it cool."
encrypted_message = encrypt(unencrypted_message)
decrypted_message = decrypt(encrypted_message) 


print(unencrypted_message)
print(encrypted_message)
print(decrypted_message) 

with open('substitution_sample_run.txt', 'w') as f:
    f.write(encrypted_message + "\n")
    f.write(unencrypted_message + "\n")
    f.write(decrypted_message + "\n") 
    
